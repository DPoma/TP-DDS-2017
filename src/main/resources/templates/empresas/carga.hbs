{{#partial "contenido"}}
<!DOCTYPE html>

<head>
	<meta charset="utf-8">
	<title>Cargar archivo</title>
</head>

<body>
	<form action="/cargar" method="POST">

		<div class="form-group">
        <label for="nombre" class="sr-only">Ingrese la ruta del archivo</label>
        <input type="text" id="nombre" name="ruta" class="form-control" placeholder="Ingrese una ruta" required>
		</div>
		
		<div class="form-group">
			<input class="btn btn-primary btn-lg" type="submit" value="Cargar">
		</div>
	</form>
</body>
{{/partial}}
