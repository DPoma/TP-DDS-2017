{{#partial "contenido"}}
<!DOCTYPE html>

<head>
	<meta charset="utf-8">
	<title>Metodologias</title>
</head>

<body>
	<div>
	<h3>Metodologia</h3>
	<form>
		
		<div class="form-group">		
			<label for="nombre">Metodologias</label>
			<select name="nombreCondicion" class="custom-select">
				<option value="-1">Seleccione una metodologia</option>
				{{#each condiciones}}
				<option value= {{idCondicion}}> {{idCondicion}}</option>
				{{/each}}
			</select>
		</div>

				<div class="form-group">		
			<label for="nombre">Empresas</label>
			<select name="nombreCondicion" class="custom-select">
				<option value="-1">Seleccione una empresa</option>
				{{#each condiciones}}
				<option value= {{idCondicion}}> {{idCondicion}}</option>
				{{/each}}
			</select>
		</div>

		<div class="form-group">
			<input class="btn btn-primary btn-lg" type="submit" value="Agregar empresa a comparar">
		</div>


	<div class="table-responsive">
		<h3>Empresas a comparar</h3>
	<table class="table">
		<tr>
			<th>Empresa</th>
		</tr>
		{{#each ventas}}
		<tr>
			<td>{{nombreEmpresa}}</td>
		</tr>
		{{/each}}
	</table>
	</div>	

		<div class="form-group">
			<input class="btn btn-primary btn-lg" type="submit" value="Aplicar">
		</div>
	</form>
	</div>

	<div>
    	<a href="metodologias/nueva"><input class="btn btn-primary btn-lg" type="submit" value="Crear metodologia"></a>
  	</div>

</body>
{{/partial}}
{{>layout.hbs}}