{{#partial "contenido"}}
<!DOCTYPE html>

<head>
	<meta charset="utf-8">
	<title>Nueva condicion</title>
</head>

<body>
<p style = "font-size:24px">Analizar indicador entre empresas</p>

	<form action="/condiciones/condicionTipo2" method="POST">
	
	
		<div class="form-group">		
			<label for="nombre">Indicador</label>
			<select name="indicador" class="custom-select">
				<option value="-1">Seleccione un indicador</option>
				{{#each indicadores}}
				<option value= {{nombreIndicador}}> {{nombreIndicador}}</option>
				{{/each}}
			</select>
		</div>

				<div class="form-group">		
			<label for="nombre">Operacion</label>
			<select name="operacionIndicador" class="custom-select">
				<option value="-1">Seleccione una operacion</option>
				{{#each operacionesIndicador}}
				<option value= {{nombre}}> {{nombre}}</option>
				{{/each}}
			</select>
		</div>

		<div class="form-group">
			<label for="nombre">Año</label>
			<input type="text" placeholder="Ingrese un año" name="anio">
		</div>


		<input class="btn btn-primary btn-lg" type="submit" value="Guardar">
	</form>

	  	<div>
    	<a href="../"><input class="btn btn-primary btn-lg" type="submit" value="Ir al menu principal"></a>
  	</div>
  	
</body>

{{/partial}}
{{>layout.hbs}}